    <div class="panel-heading">
      <h1 ng-if="name">Привет, {{name}}</h1>
    </div>
    <div class="panel-body">
      <form class="form-inline">
        <div class="form-group">
          <input class="form-control" type="text" placeholder="Введите ваше имя" autofocus ng-model="name">
        </div>
      </form>
    </div>
  </div>
</div>
